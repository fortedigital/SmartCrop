@using AlloyDemoKit
@model PageViewModel<ArticlePage>

@{ Layout = "~/Views/Shared/Layouts/_LeftNavigation.cshtml"; }

<h1 @Html.EditAttributes(x => x.CurrentPage.PageName)>@Model.CurrentPage.PageName</h1>
<p class="introduction" @Html.EditAttributes(x => x.CurrentPage.MetaDescription)>@Model.CurrentPage.MetaDescription</p>

<h1>Original</h1>
@Html.PropertyFor(m => m.CurrentPage.Image)

<h1>Naive crop</h1>
@Html.ResizedPicture(Model.CurrentPage.Image, 300, 300, false)<br /><br />
@Html.ResizedPicture(Model.CurrentPage.Image, 300, 600, false)<br /><br />
@Html.ResizedPicture(Model.CurrentPage.Image, 600, 300, false)<br /><br />

<h1>Smart crop</h1>

@Html.ResizedPicture(Model.CurrentPage.Image, 300, 300, true)<br /><br />
@Html.ResizedPicture(Model.CurrentPage.Image, 300, 600, true)<br /><br />
@Html.ResizedPicture(Model.CurrentPage.Image, 600, 300, true)<br /><br />




<div class="row">
    <div class="span8 clearfix" @Html.EditAttributes(x => x.CurrentPage.MainBody)>
        @Html.DisplayFor(m => m.CurrentPage.MainBody)
    </div>
</div>
@Html.PropertyFor(x => x.CurrentPage.MainContentArea, new { CssClass = "row", Tag = Global.ContentAreaTags.TwoThirdsWidth })
